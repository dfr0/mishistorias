#include<iostream>

using namespace std;

//Prototipo de funcion
int encontrarMax(int x, int y);

int main(){
	int n1,n2;
	int mayor; //podriamos quitarla
	cin>>n1>>n2;
	
	// esto sobra con la llamada siguiente --> mayor = encontrarMax(n1,n2); //lo que importa es la ubicación cada uno de ellos corresponde a x y y. //esto equivale a un numero

	count<<"El mayor de dos numeros es "<<encontrarMax(n1,n2)<<endl 
}

//Definicion de funcion
int encontrarMax(int x, int y){
	int numMax = x;
	if(x>y){
	}
	else{
	    numMax = y;
	}
	return numMax;
}






